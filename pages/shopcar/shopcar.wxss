@import '../common/common.wxss';

.cart-box{
    padding-bottom: 100rpx;
    
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 25rpx;
    height: 25rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
   text-overflow: ellipsis; 
  line-height: 40rpx;
}
.cart-list .cart-pro-price{
    font-size:28rpx;
    font-weight: bold;
    color:red;
    line-height: 50rpx;
}
.cart-list .cart-count-box{
    position: absolute;
    bottom: 10rpx;
    width: 250rpx;
    height: 80rpx;
    color: #b5b5b5;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 60rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    width: 40rpx;
    height: 40rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
    margin-top: 3rpx;
}
.cart-count-num{
    padding: 0 28rpx;
    color: #555;
    border-bottom: 1px solid #dbdbdb;
    margin: 15rpx;
}
.cart-del{
    position: absolute;
    right:30rpx;
    top:20rpx;
    width:50rpx;
    height:50rpx;
    color:#b5b5b5;
    line-height:80rpx;
    text-align:center;
    font-size:44rpx;
    opacity:.6;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #f6ac34;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
    /* background-image: url(/image/icon3.png); */
    background-size: 100%;
}
.cart-toatl-price{
  position: absolute;
  left: 100px;
    width: 120rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}