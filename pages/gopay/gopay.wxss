/* pages/gopay/gopay.wxss */
@import '../common/common.wxss';
.cart-top{
  height: 90rpx;
  border-bottom: 1rpx solid #f6ac34;
}
.cart-top .cart-thumb{
    position: absolute;
    top: 10rpx;
    left: 25rpx;
    width: 60rpx;
    height: 60rpx;
}
.cart-top text{
    position: absolute;
    top: 10rpx;
    left: 100rpx;
    font-size: 24rpx;
}
.cart-top::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.cart-box{
    padding-bottom: 100rpx; 
    margin-top: 10rpx;
}
.cart-list{
    position: relative;
    padding: 5rpx 5rpx 5rpx 285rpx;
    height: 135rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-thumb{
    position: absolute;
    top: 5rpx;
    left: 25rpx;
    width: 135rpx;
    height: 135rpx;
}
.cart-list .cart-pro-name{
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
   text-overflow: ellipsis; 
  line-height: 40rpx;
}
.cart-list .cart-pro-price{
    font-size:25rpx;
    font-weight: bold;
    color:red;
    line-height: 50rpx;
}
.cart-list .cart-count-num{
    position: absolute;
    font-size:28rpx;
    font-weight: bold;
    color:#666;
    line-height: 50rpx;
    right: 50rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #f6ac34;
    color: #fff;
}
.cart-toatl-price{
  position: absolute;
  left: 100px;
    width: 350rpx;
}
.cart-footer-gopay{
  position: absolute;
  right: 10px;
  width: 70px;
  line-height: 60rpx;
  margin-top: 15rpx;
  border:1rpx solid #fff;
  font-size: 25rpx;
  color: white;
  text-align: center;
  margin-left: 40px;
}