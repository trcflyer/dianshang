   justify-content: center;  */
  width:100%; 
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
}
.item-intro {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 10px;
}
.prodect-detail{
  margin-bottom: 50px;
}
.detailPic{
  width: 100%;
  margin-left:2rpx;
  margin-right: 2rpx;
  border-radius: 2rpx;
}
.line-image{
 background-color: #444;
    width: 100%;
    height: 1rpx;
}
.prodect_detail_buttom{
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  border-top: 2rpx solid rgba(0, 0, 0, .08);
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.buyTop{
  margin: 20px;
}
.buyTop_image{
  width:92px;
  height:92px;
  margin-left:10px;
  display:inline-block;
  border-radius:6px;
  margin-top:-50px;
  box-shadow:0 1px 4px rgba(0, 0, 0, .28);
}
.buyTop_des{
  margin-left:10px;
  margin-right: 40px;
  margin-top: -20px;
  display:inline-block;
  position:absolute;
}
.buyTop_des_title{
  font-size: 28rpx;

}
.buyTop_des_price{
  font-size: 28rpx;
  color: red;
}
.buyTop_del{
  position:absolute;
  right:5px;
  top:5px;
  width:22px;
  height:22px;
}
.buyline{
  height: 1rpx;
  background-color: #ccc;
  margin-left:10px;
  margin-right: 10px; 
}
.buyNum{
  margin: 20px;
  line-height:45px;
  border-top:1px solid #dbdbdb;
  border-bottom:1px solid #dbdbdb;
}
.buyNum_right{
  float: right;
  margin-right: 20px;
  color: #b5b5b5;
}
.buyNum_del{
  margin:3px;
  font-size: 60rpx;
  color: #444;
}
.buyNum_count{
  margin-left:5px;
  margin-right: 5px;
  margin-bottom: 3px;
  font-size: 30rpx;
}
.buyNum_add{
  margin:3px;
  font-size: 40rpx;
}
.addShopCar{
  width:100%; 
  color: white;
  background-color: red;
  font-size: 30rpx;
  text-align: center;
  line-height: 45px;
  }
