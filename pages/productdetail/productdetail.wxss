/* productdetial.wxss */
@import '../common/common.wxss';

.prodect-desc {
  height: 100%;
  background-color: #fff;
  padding: 20rpx;
}
.prodect-desc .item-title {
  max-height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: normal;
  word-break: break-all;
}

.item-about {
  margin: 18rpx 0;
  padding: 4rpx 10rpx;
  color: #999;
  font-size: 26rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.item-about .item-stock {
  float: right;
  clear: both;
}
.item-about icon {
  vertical-align: middle;
}
.item-about .item-ensure {
  margin-right: 30rpx;
  vertical-align: middle;
}
.add_count {
  margin:0 20rpx;
  padding:0 14rpx;
  color: #555;
  border-bottom:1px solid #ddd;
}

.line{
  background-color: #444;
  width: 100%;
  height: 30rpx;
}
.nav-title{
  /* background-color: #fff;
  width: 100%;
   display: flex; 
  font-size: 32rpx;
