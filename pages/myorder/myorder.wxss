@import '../common/common.wxss';

/* myorder.wxss */
.my-orders {
  height: 100vh;
  background: #ededed;
}
.orders-box{
    color: #999;
    font-size: 28rpx;
}

.orders-list{
    padding-left: 30rpx;
    margin-bottom: 20rpx;
    background: white;
}
.orders-list:last-child{
    border-bottom: 0;
}
.orders-number{
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1rpx solid #eee;
    color: #404040;
}
.orders-status{
    position: absolute;
    right: 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #ffa01a;
}
.orders-detail{
    position: relative;
    height: 120rpx;
    padding: 10rpx 5rpx 5rpx 140rpx;
    border-bottom: 1rpx solid #eee;
}
.orders-detail .detail-text{
    padding: 6rpx 10rpx;
    line-height: 30rpx;
    color: #b5b5b5;
}
.orders-detail .detail-text.name {
    color: #555;
}
.orders-detail image{
    position: absolute;
    left: 0;
    top: 10rpx;
    width: 120rpx;
    height: 120rpx;
}
.orders-detail view{
    line-height: 60rpx;
}

.orders-footer{
    height: 50rpx;
    line-height: 50rpx;
    color: #2f2f2f;
    padding:15rpx 10rpx 15rpx 0;
}
.orders-footer .orders-btn{
    float: right;
    padding: 0 20rpx;
    height: 50rpx;
    line-height:50rpx;
    border-radius: 30rpx;
    background: #fff;
    color: #ffa01a;
    font-size: 24rpx;
    border:1px solid #ffa01a;
}
/* 修改边框颜色 */

.order-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}