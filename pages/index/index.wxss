.search {
  position: fixed;
  border: 1px solid #cdcdcd;
  border-radius: 50%;
  top: 1rpx;
  right: 2%;
  height: 60rpx;
  width: 60rpx;
  background-color: white;
  opacity: .6;
  z-index: 999;
}
.search:active,
.search:hover {
  opacity: 1;
  right: 2%;
  width: 96%;
  border-color: whitesmoke;
  border-radius: 30rpx;
  background: white;
}
.search image{
    position: absolute;
    left: 12rpx;
    top: 12rpx;
    width: 40rpx;
    height: 40rpx;
}
.search .input{
  padding-left: 60rpx;
  padding-top: 10rpx;
  font-size: 30rpx;
  color: #333;
}
.products-item{
   position: relative;
}

