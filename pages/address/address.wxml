<view class="main">
  <view class="form-box">
    <form bindsubmit="formSubmit">
      <view class='input-item-default'>
        <view class='left'>收货人 </view>
        <input value="{{address.name}}"  bindinput="bindName" />
      </view>
      <view class='input-item-default'>
        <view class='left'>手机号码 </view>
        <input type="number" value="{{address.phone}}"  bindinput="bindPhone" bindfocus='bindFocus' bindblur='bindBlur'/>
      </view>
      <view class='input-item-default'>
        <view class='left'>详细地址 </view>
        <input value="{{address.detail}}"  bindinput="bindDetail" />
      </view>
      <button form-type="submit">保存</button>
    </form>
  </view>
</view>