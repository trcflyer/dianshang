/* pages/pointcenter/pointcenter.wxss */
.contain {
  text-align: center;
  color: goldenrod;
}
.tab {

}
.tab-left,
.tab-right {
  display: inline-block;
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #f6ac34;
}
.main {
  background: #4a1b16 url(../../image/bg.png) repeat;
}
.img-wrap {
  display: inline-block;
  width: calc(50% - 40rpx);
  margin: 20rpx;
  background-image: radial-gradient(60% 55%, farthest-side,blue,green,#f6ac34,black);
}
.img-item {
  width: 280rpx;
  height: 280rpx;
  padding: 20rpx;
  border: 1rpx solid #f6ac34;
  background:rgba(0, 0, 0, .4);
}
.item-title {
  font-size: 28rpx;
}
.item-price {
  font-size: 24rpx;
}
.btn-item {
  height: 60rpx;
  width: calc(100% - 40rpx);
  background: #ffdc94;
  border-color: #f6ac34;
  color: #444;
  font-size: 16px;
  line-height: 60rpx;
}