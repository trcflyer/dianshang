/* order.wxss */
@import '../common/common.wxss';

.header{
    position: relative;
    height: 200rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    background: #f6ac34;
    font-size: 28rpx;
    color: #fff;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.header .userid{
    position: absolute;
    top: 110rpx;
    left: 40rpx;
}
.header .points{
    position: absolute;
    top: 110rpx;
    right: 40rpx;
}
.aboutus-box{
    border-bottom: 1rpx solid #eee;
    color: #666;
    line-height: 90rpx;
    font-size: 28rpx;
}
.aboutus-box .aboutus-manage{
     position: relative;
    height: 90rpx;
    border-bottom: 1rpx solid #eee;
    text-align: center;
}
.aboutus-box .aboutus-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #cdcdcd;
    border-right: 4rpx solid #cdcdcd;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.address-box{
    border-bottom: 20rpx solid #ededed;
    color: #666;
    line-height: 90rpx;
    font-size: 28rpx;
}
.address-box .address-manage{
    position: relative;
    height: 90rpx;
    border-bottom: 1rpx solid #eee;
    text-align: center;
}
.address-box .address-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #cdcdcd;
    border-right: 4rpx solid #cdcdcd;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.address-box .address-list{
    padding-left: 30rpx;
}
.address-box .address-list view{
    height: 90rpx;
    border-bottom: 1rpx solid #eee;
}
.address-box .address-list view:last-child{
    border-bottom: 0;
}
.myorder-box{
    border-bottom: 1rpx solid #eee;
    color: #666;
    line-height: 90rpx;
    font-size: 28rpx;
}
.myorder-box .myorder-manage{
     position: relative;
    height: 90rpx;
    border-top: 1rpx solid #eee;
    text-align: center;
}
.myorder-box .myorder-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #cdcdcd;
    border-right: 4rpx solid #cdcdcd;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
contact-button {
  position: fixed;
  padding: 8px;
  bottom: 30%;
  right: 30rpx;
  background: rgba(0, 0, 0, .6);
  border-radius: 50%;
  opacity: .9;
  box-shadow: 0 2px 8px rgba(0, 0, 0, .2);
}